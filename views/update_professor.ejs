<!-- include header -->
<%- include('include/_header')%>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Students</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update Professor</h2>
            <span class="text-light"></span>
        </div>

        <!-- form handling-->
        <form method="POST" id="update_professor">
            <div class="new_user">
                <div class="form-group">
                    <label for="professorID" class="text-light">ProfessorID</label>
                    <input type="hidden" name="id" value="<%= professor._id %>">
                    <input type="text" name="professorID" value="<%= professor.studentID %>">
                </div>
                <div class="form-group">
                    <label for="Password" class="text-light">Password</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="password" value="<%= professor.password %>">
                </div>
                <div class="form-group">
                    <label for="Name" class="text-light">Name</label>
                    <input type="text" name="name" value="<%= professor.name %>">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= professor.email %>">
                </div>
                <div class="form-group">
                    <label for="Phone number" class="text-light">Phone Number</label>
                    <input type="text" name="phoneNumber" value="<%= professor.phoneNumber %>" placeholder="+821099999999">
                </div>
                <div class="form-group">
                    <label for="Lectures" class="text-light">Lectures</label>
                    <input type="text" name="lectures" value="<%= professor.lectures %>" >
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
        
    </div>
</main>
<!-- /Main Site -->

<!-- include header -->
<%- include('include/_footer')%>
<!-- /include header -->